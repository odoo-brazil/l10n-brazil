<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <!-- Modo de Pagamentos -->

    <!-- Modo de Pagamentos Cobrança Bradesco400 -->
    <record id="payment_mode_cobranca_bradesco400" model="account.payment.mode">
        <field name="name">Cobrança Bradesco400</field>
        <field name="company_id" ref="base.main_company"/>
        <field name="instrucoes">Pagavel em qualquer banco ate o
            vencimento
        </field>
        <field name="bank_account_link">fixed</field>
        <field name="fixed_journal_id" ref="bradesco_journal"/>
        <field name="payment_order_ok">True</field>
        <field name="payment_method_id"
               ref="l10n_br_account_payment_cobranca.payment_mode_type_cnab400"/>
        <field name="operation_type">3</field>
        <field name="boleto_convenio">06</field>
        <field name="boleto_carteira">03</field>
        <field name="boleto_modalidade">DM</field>
        <field name="boleto_variacao">19</field>
        <field name="boleto_aceite">S</field>
        <field name="cnab_sequence_id"
               ref="l10n_br_account_payment_cobranca.sequence_cnab_number"/>
    </record>

