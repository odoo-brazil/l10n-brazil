<odoo>

    <record id="l10n_br_account_payment_mode_line_tree" model="ir.ui.view">
        <field name="name">l10n_br_account.payment.mode.line.tree</field>
        <field name="model">account.payment.mode.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="bank_id"/>
                <field name="service_type_id"/>
                <field name="release_form_id"/>
                <field name="doc_finality_code_id"/>
                <field name="ted_finality_code_id"/>
            </tree>
        </field>
    </record>

    <record id="l10n_br_account_payment_mode_line_form" model="ir.ui.view">
        <field name="name">l10n_br_account.payment.mode.line.form</field>
        <field name="model">account.payment.mode.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="payment_mode_id" invisible="True"/>
                        <field name="name"/>
                        <field name="bank_id"/>
                        <field name="service_type_id"/>
                        <field name="release_form_id"/>
                        <field name="doc_finality_code_id"/>
                        <field name="ted_finality_code_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
