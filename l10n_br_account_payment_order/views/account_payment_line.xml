<odoo>

    <record id="l10n_br_account_payment_line_form" model="ir.ui.view">
        <field name="name">l10n_br_account.payment.line.form</field>
        <field name="model">account.payment.line</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="account_payment_order.account_payment_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="percent_interest"/>
                <field name="amount_interest"/>
            </xpath>
            <field name="name" position="after">
                <field name="payment_mode_id"/>
                <field name="payment_mode_line_id"/>
            </field>
            <xpath expr="//group[@name='right']" position="after">
                <group name="cnab" string="CNAB">
                    <field name="own_number"/>
                    <field name="document_number"/>
                    <field name="company_title_identification"/>
                    <field name="bank_id" invisible="True"/>
                    <field name="service_type_id"/>
                    <field name="release_form_id"/>
                    <field name="doc_finality_code_id"/>
                    <field name="ted_finality_code_id"/>
                    <field name="complementary_finality_code"/>
                    <field name="favored_warning"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
